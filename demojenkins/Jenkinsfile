pipeline {
    agent any

    stages {
        stage ('Build') {
            steps {
                sh 'mvn -f demojenkins/pom.xml clean install'
                //sh 'mvn -f demojenkins/pom.xml clean package'
            }
        }

        stage('Setup container JDK') {
            parallel {
                stage ('Stop container') {
                    steps {
                        sh 'docker container stop java-jdk'
                    }
                }

                stage ('Remove container') {
                    steps {
                        sh 'docker container rm java-jdk'
                    }
                }

                stage ('Create container andd mount volume') {
                    steps {
                        sh 'docker run --name java-jdk -d -v /opt/tomcat/.jenkins/workspace/java-full-pipeline/demojenkins/target:/home -i openjdk'
                    }
                }               
            }
        }

        stage ('Deloy') {
            steps {
                timeout(5) {
                    waitUntil {
                        script {
                        def r = sh script: 'docker exec java-jdk java -jar /home/demojenkins-0.0.1-SNAPSHOT.jar sleep 90', returnStatus: true
                        return (r == 0);
                        }
                    }
                }    
            }
        }

        stage('Release') {
            steps {
                echo 'Release....'
            }
        }
    }
}
